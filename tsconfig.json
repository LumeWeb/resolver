{
    "compilerOptions": {
        "declaration": true,
        "strict": true,
        "module": "esnext",
        "target": "esnext",
        "esModuleInterop": true,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/esm",
        "typeRoots": [
            "node_modules/@types"
        ],
        "moduleResolution": "node",
        "declarationMap": true,
        "declarationDir": ".dist/esm",
        "emitDeclarationOnly": false,
        "allowJs": true
    },
    "include": [
        "src"
    ]
}
